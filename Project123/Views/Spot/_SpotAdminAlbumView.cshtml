                    <tr class="text-center">

                        <th>#</th>
                        <th>Title</th>
                        <th>Artist</th>
                        <th>Duration</th>
                        <th>Genres</th>
                        <th style="width:80px!important;">AddSong</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </form>
    <hr />
    <div class="col-12 mt-4">
        <div class="col-4 offset-8 d-flex justify-content-end">
            <button type="button" id="btnCancel" class="btn btn-secondary m-2 px-4 " onclick="clearAlbumValue()">Cancel</button>
            <button type="button" id="btnSaveEditAlbum" class="btn btn-secondary m-2 px-4 " onclick="saveEditAlbum()">Save</button>
        </div>
    </div>
