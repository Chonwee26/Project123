@foreach (var logis in Model)
{

    <p>ShipmentId @logis.ShipmentId</p>;
    <p>FullName @logis.FullName</p>;
    <p>MobileNumber @logis.MobileNumber</p>;
    <hr />
}
<script>
    $(document).ready(function () {
        const $modal = $('#modal-root');
        const $openModalButton = $('#openModalButton');
        const $closeModalButton = $('.close-modal-img-popup');

        $openModalButton.on('click', function () {
            $modal.css('display', 'flex');
        });

        $closeModalButton.on('click', function (event) {
            event.preventDefault();
            $modal.css('display', 'none');
        });

        // Close modal when clicking outside of the image
        $modal.on('click', function (event) {
            if (event.target === this) {
                $modal.css('display', 'none');
            }
        });
    });

 
</script>