@section Styles{
    <style type="text/css">
        body {
            height: calc(100vh-107px) !important;
            background-color: #f9fbfd;
        }
        .size-btn{
            font-size:10px;
        }
        .container {
        }

        .card {
            background-color: white;
        }

        .carousel-item img {
            height: 400px;
            width: 1600px;
            min-width: auto;
            object-fit: cover;
        }

        #carouselExampleCaptions {
            margin: 0; /* Reset margin for the carousel container */
        }

        #chatbot {
            position: fixed;
            bottom: 0;
            right: 20px;
            width: 300px;
            border: 1px solid #ccc;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: white;
        }

        #chatbotHeader {
            background-color: #007bff;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        #chatbotBody {
            display: none;
            padding: 10px;
        }

        #messages {
            height: 250px;
            overflow-y: auto;
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            word-wrap: break-word;
        }

        #userInput {
            width: calc(100% - 70px);
            padding: 5px;
            outline: none;
            margin-right: 10px;
        }

        #btnSend {
            padding: 5px 10px;
            outline: none;
        }

        .bubble-message {
            border-radius: 10px;
            color: white;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 5px;
            padding-bottom: 5px;
            max-width: 80%; /* Ensures the bubbles don't exceed a certain width */
            word-wrap: break-word; /* Ensures long text wraps */
        }

        .bot-bubble-message {
            background-color: grey;
        }

        .user-bubble-message {
            background-color: #007bff;
        }

        #progressCard {
            margin: auto;
            max-width: 800px;
            border: none;
        }

        #progressBar {
            color: blue;
            overflow: hidden;
            padding: 0;
            display: flex;
            justify-content: space-between; /* Distributes the space between the items */
        }

            #progressBar li {
                list-style-type: none;
                font-weight: 400;
                color: rgb(160, 159, 159);
                padding: 10px;
                position: relative;
                flex: 1; /* Allows the items to grow and shrink as needed */
                display: flex;
                justify-content: center;
                align-items: center;
            }

                #progressBar li:before {
                    content: "";
                    width: 10px;
                    height: 10px;
                    border-radius: 50%;
                    background-color: currentColor;
                    position: absolute;
                    top: -5px; /* Adjust the position as needed */
                    z-index: -1;
                }

                /*หลอดbar*/ #progressBar li:after {
                    content: '';
                    height: 8px;
                    background: #ddd;
                    position: absolute;
                    top: 0;
                    left: 50%;
                    width: 100%;
                    z-index: 1;
                    transform: translateX(-50%);
                }



                #progressBar li.active {
                    color: black;
                }

                    #progressBar li.active:before,
                    #progressBar li.active:after {
                        background-color: blue;
                    }

        #step3 {
            width: 100% !important;
            white-space: nowrap;
        }
    </style>
}

