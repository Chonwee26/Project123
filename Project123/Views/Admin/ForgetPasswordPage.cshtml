                    <input type="password" class="form-control" id="passwordInput" placeholder="Enter your Password" />
                    <button type="submit" class="btn btn-primary" id="btnLogin">Log in</button>*@
                    <h3 id="resetPasswordTitle" data-i18n="login.title">Reset Password</h3>
                    <div class="form-group mb-4">
                        <input type="email" class="form-control" id="txtResetEmail" placeholder="Enter your Email" />
                    </div>

                    <div class="form-group mb-4">
                        <input type="password" class="form-control mb-2" id="txtPassword" placeholder="Enter your new password" />
