    <script>

        $(document).ready(function () {
            $(".sidebar").resizable({
                handles: 'e', // Enable resizing from the east (right) edge
                minWidth: 107,
                maxWidth: 420,
                resize: function (event, ui) {
                    $('#main').css('margin-left', ui.size.width + 'px');
                }
            });
            getAlbumSideLayout();

            function changeIconClass(activeIcon, inactiveIcon) {
                $(activeIcon).addClass('active-icon').removeClass('inactive-icon');
                $(inactiveIcon).addClass('inactive-icon').removeClass('active-icon');
            }

            $('#btnHome').on('click', function () {
                changeIconClass('#iconHome', '#iconSearch, #iconLove');
            });

            $('#btnSearch').on('click', function () {
                changeIconClass('#iconSearch', '#iconHome, #iconLove');
            });

            $('#btnLove').on('click', function () {

                changeIconClass('#iconLove', '#iconHome, #iconSearch');
            });
        });
