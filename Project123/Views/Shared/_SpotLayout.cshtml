                    <div class="content bottomside-control col-4 ">
                        <div class="col-12 d-flex justify-content-center">
                            <button class="button-control" type="button"><i class="fa-solid icon-control fa-shuffle"></i></button>

                            <button class="button-control"><i class="fa-solid icon-control fa-backward"></i></button>
                            <button class="button-control"><i class="fa-solid icon-control fa-play"></i></button>
                            <button class="button-control"><i class="fa-solid icon-control fa-pause"></i></button>
                            <button class="button-control"><i class="fa-solid icon-control fa-circle-play"></i></button>
                            <button class="button-control"><i class="fa-solid icon-control fa-forward"></i></button>

                            <button class="button-control"><i class="fa-solid icon-control fa-repeat"></i></button>

                            <button class="button-control"><i class="fa-solid icon-control fa-volume-low"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.all.min.js"></script>
    <script src="~/lib/datetimepicker/js/jquery.datetimepicker.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
